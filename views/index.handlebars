<div class="container">

  <div class="jumbotron">
    <h1>Eat-Da-Burger</h1>
    <p>Make the Burgers. Eat the Burgers</p>
    <h2> Make your Burger</h2>
    {{!-- <input type="text" id="burger" />
    <button class="add-burger">Add Burger</button> --}}
    <panel>
      <form class="create-form">
        <div class="form-group">
          <label for="newburger">Order Fresh Burger</label>
          <input type="text" id="newburger" name="burger">
          <button type="submit" class="btn btn-success" id="addBurger">
            <span class="f fa-thumbs-up"></span>
          </button>
        </div>
      </form>
    </panel>

  </div>
  <div class="row">
    <div class="col-sm-6">
      <div class="panel panel-default">
        <div class="panel-heading" id="leftside"><strong>Order YOur Burger</strong></div>
        
        <div class="panel-body">

          <ul>
            {{#each burgers}}
            {{#unless this.devoured}}
            <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
            <button type="button" class="eatburger btn btn-warning" id="eatbutton" data-id="{{this.id}}"
             data-newDevoured={{this.devoured}}><span class="fa fa-usd"></span></button>
            <hr>
            {{/unless}}
            {{/each}}
          </ul>   

        </div>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="panel panel-default">
        <div class="panel-heading" id="rightside"><strong>Devoured Burgers</strong></div>
        <div class="panel-body">
          
          <ul>
            {{#each burgers}}
            {{#if this.devoured}}
            <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
            <button type="button" class="trashburger btn btn-warning" id="trashbutton" data-id="{{this.id}}"
             data-newDevoured={{this.devoured}}><span class="fa fa-trash"></span></button>
            <hr>
            {{/if}}
            {{/each}}
            </ul> 

        </div>
      </div>
    </div>
  </div>

</div>
  